        </section>
    </main>
</Layout>

<style lang="scss">
    @keyframes fadeUpIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 3rem;
        padding: 2rem 0;
        flex: 1;
        text-align: center;
        justify-content: center;

        @media (max-width: 480px) {
            gap: 2rem;
            padding: 1.5rem 0;
        }
    }

    ul,
    ol,
    li {
        list-style: none;
    }

    .devs-ul {
        display: grid;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        gap: 2rem;
        padding: 0 1rem;

        li {
            margin: 0 auto;
            max-width: 400px;
            width: 100%;
            opacity: 0;
            animation: fadeUpIn 0.5s ease-out forwards;
            animation-delay: calc(var(--dev-index, 0) * 0.1s + 0.2s);
        }

        @media (min-width: 833px) {
            grid-template-columns: repeat(2, minmax(0, 400px));
            justify-content: center;
        }

        @media (min-width: 1205px) {
            grid-template-columns: repeat(3, minmax(0, 400px));
        }
    }

    .contributors {
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .contributors-scroll {
        display: flex;
        align-items: center;
        justify-content: start;
        width: max-content;
        flex-wrap: nowrap;
        animation: scroll 20s linear infinite;
    }

    .contributors-ul {
        display: flex;
        flex-wrap: nowrap;
        gap: 0;
        padding: 0;
        width: auto;

        li {
            width: auto;
            flex-shrink: 1;
            opacity: 1;
            animation: none;
            margin: 0 0.5rem;
        }
    }

    .header {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 0;

        p {
            font-size: 1.3rem;
            margin: 1.5rem 0 2.5rem 0;
            line-height: 1.6;
            color: var(--text);

            @media (max-width: 768px) {
                font-size: 1.1rem;
                margin: 1rem 0 1.5rem 0;
            }

            @media (max-width: 480px) {
                font-size: 1rem;
                margin: 0.75rem 0 1.25rem 0;
                line-height: 1.5;
            }
        }

        .rose-logo {
            width: 500px;
            height: 82.5px;
            filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.2));
            animation: fadeUpIn 0.5s ease-out forwards;

            @media (max-width: 768px) {
                width: 100%;
                height: auto;
                max-width: 400px;
            }

            @media (max-width: 480px) {
                max-width: 280px;
            }
        }
    }

    .buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        width: 100%;
        width: 600px;
        margin: auto;
        line-height: 1.55;
        padding: 0 1rem;

        @media (max-width: 768px) {
            gap: 1rem;
        }
    }

    section.projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 2fr));
        gap: 1.5rem;
        width: 100%;
        max-width: 1200px;
        padding: 0 1rem;

        h3.after {
            justify-self: center;
            align-self: center;
            opacity: 0;
            grid-column: 1 / -1;
            text-align: center;
            width: 100%;
            animation: fadeUpIn 0.5s ease-out forwards;
            animation-delay: 0.8s;
        }

        @media (max-width: 480px) {
            gap: 1.25rem;
            padding: 0 0.75rem;
        }
    }

    .select {
        font-size: 30px;
        color: #868686;
        border-bottom: 3px dashed #868686;
        display: block;
        width: 600px;
        margin: auto;
        margin-top: 15px;
        margin-bottom: 20px;
        line-height: 1.55;
    }
</style>
