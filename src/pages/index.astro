---
import Layout from "@/layouts/Layout.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import DeveloperCard from "@/components/DeveloperCard.astro";
import ContributorCard from "@/components/ContributorCard.astro";
import WiiUButton from "@/components/WiiUButton.astro";
import { Image } from "astro:assets";
---

<Layout
    title="Home - Project Rosé"
    description="Project Rosé is a group of developers reviving web apps for the Wii U!"
>
    <main id="main-content" role="main">
        <div class="header" role="banner">
            <a href="/">
                <Image
                    src={"/img/logo.webp"}
                    alt="Project Rosé - Wii U Web App Revival Project"
                    width={920}
                    height={160}
                    class="rose-logo"
                    loading="eager"
                />
            </a>
            <p>
                Project Rosé is an open source revival project for Nintendo
                TVii, Demae-Can, and more!
            </p>

            <div class="buttons">
                <h2 class="select">What would you like to do?</h2>

                <WiiUButton href="https://discord.gg/AaTsXndGun" newTab={true}>
                    Join our Discord
                </WiiUButton>
                <WiiUButton
                    href="https://github.com/project-rose/"
                    newTab={true}
                >
                    Check out our GitHub
                </WiiUButton>
                <!-- <WiiUButton href="/blog"> Read our blog </WiiUButton> -->
            </div>
        </div>

        <section class="projects" aria-label="Our Projects">
            <ProjectCard
                title="Nintendo TVii (JP)"
                description="Nintendo TVii (JP) was a Wii U web applet that helped users discover Live TV and post to Miiverse."
                image="/img/bg/tvii-jp.webp"
                alt="Nintendo TVii screenshot"
                href="/nintendo-tvii"
                className="mt-1"
                style="--card-index: 1;"
            />
            <ProjectCard
                title="Demae-Can"
                description="Demae-Can was a Japan-exclusive Wii U app that let users order food through the DEMAE-CAN delivery service."
                image="/img/bg/demae.webp"
                alt="Demae-Can screenshot"
                href="/demae-can"
                style="--card-index: 2;"
            />
            <h3 class="after">With more planned!</h3>
        </section>

