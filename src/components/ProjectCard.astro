---
import { Image } from "astro:assets";

interface Props {
    title: string;
    description: string;
    image: string;
    alt: string;
    href: string;
    className?: string;
    style?: string;
}

const {
    title,
    description,
    image,
    alt,
    href,
    className = "",
    style = "",
}: Props = Astro.props;
---

<div class="card-wrapper">
    <a
        href={href}
        class:list={["project-card", className]}
        role="link"
        aria-labelledby={`card-title-${title.toLowerCase().replace(/\s+/g, "-")}`}
        style={style}
    >
        <Image
            src={image}
            height={324}
            width={576}
            alt={alt}
            loading="eager"
            class="card-image"
        />
        <div class="overlay">
            <h2 id={`card-title-${title.toLowerCase().replace(/\s+/g, "-")}`}>
                {title}
            </h2>
            <p class="card-description">{description}</p>
            <span class="learn-more" aria-hidden="true">
                Learn more <span class="arrow">â†’</span>
            </span>
        </div>
    </a>
</div>

<style lang="scss">
    @keyframes fadeUpIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card-wrapper {
        perspective: 1000px;
        transform-style: preserve-3d;
    }

    .project-card {
        position: relative;
        display: block;
        border-radius: 20px;
        overflow: hidden;
        transform: translateZ(0) translateY(0) scale(1);
        transition: transform 0.3s ease;
        box-shadow: var(--card-shadow);
        aspect-ratio: 16/9;
        width: 100%;
        max-width: 576px;
        margin: 0 auto;
        background: #fff;
        text-align: left;
        backface-visibility: hidden;
        animation: fadeUpIn 0.5s ease-in-out backwards;
        animation-delay: calc(var(--card-index) * 0.2s);
        opacity: 1;
        will-change: opacity, transform;

        &:hover,
        &:focus-visible {
            transform: translateZ(0) translateY(-8px) !important;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);

            .overlay {
                background: linear-gradient(
                    to bottom,
                    rgba(0, 0, 0, 0.7),
                    rgba(0, 0, 0, 0.9)
                );
                backdrop-filter: blur(8px);
            }

            img {
                transform: scale(1.1);
            }

            .arrow {
                transform: translateX(8px);
            }
        }

        &:focus-visible {
            outline: 3px solid var(--primary);
            outline-offset: 4px;
            transform: translateZ(0) translateY(-8px);
        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        }

        .overlay {
            position: absolute;
            inset: 0;
            display: grid;
            grid-template-rows: auto 1fr auto;
            padding: 1.5rem 2rem;
            color: white;
            background: linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.5),
                rgba(0, 0, 0, 0.75)
            );
            backdrop-filter: blur(2px);
            transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);

            h2 {
                font-size: 2rem;
                font-weight: 700;
                margin: 0;
                transform: translateY(0);
                opacity: 1;
            }

            p {
                align-self: end;
                font-size: 1.15rem;
                margin-bottom: 1rem;
                line-height: 1.5;
                opacity: 0.95;
            }

            .learn-more {
                color: var(--primary);
                font-weight: 600;
                font-size: 1.1rem;
                display: flex;
                gap: 0.5rem;
                align-items: center;

                .arrow {
                    transition: transform 0.3s ease;
                }
            }
        }

        @media (max-width: 768px) {
            .overlay {
                padding: 1rem;
                grid-template-rows: auto auto 1fr;

                h2 {
                    font-size: 1.35rem;
                    margin-bottom: 0.5rem;
                }

                p {
                    font-size: 0.95rem;
                    margin-bottom: 0.5rem;
                    line-height: 1.4;
                }

                .learn-more {
                    font-size: 1rem;
                    margin-top: auto;
                }
            }
        }

        @media (max-width: 480px) {
            aspect-ratio: 4/3;

            .overlay {
                h2 {
                    font-size: 1.25rem;
                }
            }
        }
    }
</style>
